<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>de.fhhannover.inform.trust.visitmeta:common</include>
				<include>de.fhhannover.inform.trust.visitmeta:dataservice</include>
				<include>de.fhhannover.inform.trust.visitmeta:visualization</include>
			</includes>
			
			<binaries>
				<outputDirectory>modules/${artifactId}</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
			</binaries>
			
		</moduleSet>
	</moduleSets>

	
</assembly>
